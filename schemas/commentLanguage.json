{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "default": {},
    "examples": [
        {
            "username": "test1",
            "lang_name": "golang",
            "comment_text": "fith comment"
        }
    ],
    "required": [
        "username",
        "lang_name",
        "comment_text"
    ],
    "properties": {
        "username": {
            "$id": "#/properties/username",
            "type": "string",
            "title": "The username schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "test1"
            ]
        },
        "lang_name": {
            "$id": "#/properties/lang_name",
            "type": "string",
            "title": "The lang_name schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "golang"
            ]
        },
        "comment_text": {
            "$id": "#/properties/comment_text",
            "type": "string",
            "title": "The comment_text schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "fith comment"
            ]
        }
    },
    "additionalProperties": true
}